{
  "name": "macro",
  "displayName": "Macro",
  "description": "Easily create macros, record, play, code.",
  "version": "0.0.1",
  "publisher": "CristhianParra",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.switchRecording",
    "onCommand:extension.sayHello",
    "onCommand:extension.aPressed",
    "onCommand:extension.qPressed",
    "onCommand:extension.ctrlQPressed"
  ],
  "main": "./out/extension",
  "contributes": {
    "keybindings": [
      {
        "command": "extension.switchRecording",
        "key": "ctrl+shift+m"
      },
      {
        "command": "extension.sayHello",
        "key": "ctrl+q"
      },
      {
        "command": "extension.aPressed",
        "key": "a",
        "when": "recordingMacro"
      },
      {
        "command": "extension.qPressed",
        "key": "q",
        "when": "recordingMacro"
      },
      {
        "command": "extension.ctrlQPressed",
        "key": "ctrl+q",
        "when": "recordingMacro"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
