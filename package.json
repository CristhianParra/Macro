{
  "name": "macro",
  "displayName": "Macro",
  "description": "Easily create macros, record, play, code.",
  "version": "0.0.1",
  "publisher": "CristhianParra",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:macro.switchRecording",
    "onCommand:macro.fakeCmdLeft",
    "onCommand:macro.fakeShiftCmdRight",
    "onCommand:macro.fakeCmdC",
    "onCommand:macro.fakeCtrlX",
    "onCommand:macro.fakeCtrlN",
    "onCommand:macro.fakeCmdV",
    "onCommand:macro.fakeCmdRight",
    "onCommand:macro.fakeComment"
  ],
  "main": "./out/extension",
  "contributes": {
    "keybindings": [
      {
        "command": "macro.switchRecording",
        "key": "ctrl+shift+m"
      },
      {
        "command": "macro.fakeCmdLeft",
        "key": "cmd+left",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeShiftCmdRight",
        "key": "shift+cmd+right",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeCmdC",
        "key": "cmd+c",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeCmdX",
        "key": "cmd+x",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeCtrlN",
        "key": "ctrl+n",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeCmdV",
        "key": "cmd+v",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeCmdRight",
        "key": "cmd+right",
        "when": "recordingMacro"
      },
      {
        "command": "macro.fakeComment",
        "key": "cmd+k cmd+c",
        "when": "recordingMacro"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.6.1",
    "vscode": "^1.1.6",
    "tslint": "^5.8.0",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
